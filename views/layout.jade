    != js('jquery.min')
    != js('bootstrap.min')
    != js('jquery.scrollex.min')
    != js('jquery.scrolly.min')
    != js('skel.min')
    != js('util')
    != js('jDataView')
    != js('karaoke')
    != js('main')
